# Breeze Connect API Configuration
# Copy this file to .env and fill in your actual credentials

# Your Breeze API Key
BREEZE_API_KEY=your_api_key_here

# Your Breeze API Secret  
BREEZE_API_SECRET=your_api_secret_here

# Your Breeze API Session Token
# Note: Session tokens expire and need to be refreshed periodically
# Generate new session token at: https://api.icicidirect.com/apiuser/login
BREEZE_API_SESSION=your_session_token_here

# Database Configuration (using Windows Authentication)
DB_SERVER=(localdb)\mssqllocaldb
DB_NAME=KiteConnectApi
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_TRUSTED_CONNECTION=true

# Brave Search API Configuration (Optional)
# Get your API key from: https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# Kite Connect API Configuration (For Live Trading)
# Get your API credentials from: https://developers.kite.trade/
KITE_API_KEY=your_kite_api_key_here
KITE_API_SECRET=your_kite_api_secret_here
# Access token expires daily and needs to be refreshed
# Generate from: https://kite.trade/connect/login?api_key=your_api_key
KITE_ACCESS_TOKEN=your_kite_access_token_here

# Gemini API Configuration (for Claude Code planning)
# Get your API key from: https://makersuite.google.com/app/apikey
# SECURITY: NEVER commit actual API keys to Git!
GEMINI_API_KEY=your_gemini_api_key_here

# Claude Code Settings
CLAUDE_CODE_PLANNING_PROVIDER=gemini
CLAUDE_CODE_PLANNING_MODEL=gemini-1.5-flash

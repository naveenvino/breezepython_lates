# Production Environment Configuration
# Copy this file to .env and update with your production values

# Application Settings
APP_NAME=TradingSystem
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4
RELOAD=false

# Database Configuration
DB_SERVER=(localdb)\mssqllocaldb
DB_NAME=KiteConnectApi
DB_USER=
DB_PASSWORD=
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30

# Breeze API Configuration
BREEZE_API_KEY=
BREEZE_API_SECRET=
BREEZE_API_SESSION=

# Kite API Configuration
KITE_API_KEY=
KITE_API_SECRET=
KITE_ACCESS_TOKEN=

# JWT Security
JWT_SECRET_KEY=  # Generate with: openssl rand -hex 32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_MASTER_KEY=  # Generate with: openssl rand -hex 32

# Admin User
ADMIN_USERNAME=admin
ADMIN_PASSWORD=  # Change this!
ADMIN_EMAIL=admin@tradingsystem.local

# Redis Cache (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=300

# Monitoring & Alerts
MONITORING_ENABLED=true
MONITORING_INTERVAL=30

# Email Alerts
EMAIL_ALERTS_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_FROM_EMAIL=
ALERT_TO_EMAILS=  # Comma-separated list

# Webhook Alerts
ALERT_WEBHOOK_URL=

# SMS Alerts (optional)
SMS_ALERTS_ENABLED=false
SMS_API_KEY=
SMS_FROM_NUMBER=
SMS_TO_NUMBERS=  # Comma-separated list

# Performance Limits
MAX_POSITIONS=5
DEFAULT_LOT_SIZE=75
DEFAULT_NUM_LOTS=10
MAX_DAILY_TRADES=50
MAX_RISK_PERCENT=2

# Trading Hours (IST)
MARKET_OPEN_TIME=09:15
MARKET_CLOSE_TIME=15:30
PRE_MARKET_TIME=09:00
POST_MARKET_TIME=16:00

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_ALLOW_HEADERS=["*"]

# Backup & Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backup/trading_system

# Feature Flags
ENABLE_PAPER_TRADING=true
ENABLE_LIVE_TRADING=false
ENABLE_AUTO_TRADING=false
ENABLE_HEDGING=true
ENABLE_ML_SIGNALS=false
ENABLE_WEBHOOK_TRADING=false
# Secure Environment Configuration
# IMPORTANT: Replace placeholder values with actual credentials from your password manager

# Breeze Connect API Configuration
BREEZE_API_KEY=CHANGE_ME_USE_NEW_API_KEY
BREEZE_API_SECRET=CHANGE_ME_USE_NEW_SECRET
BREEZE_API_SESSION=CHANGE_ME_REGENERATE_SESSION
BREEZE_USER_ID=your_email@example.com
BREEZE_PASSWORD=ENCRYPTED_OR_FROM_KEYSTORE
BREEZE_TOTP_SECRET=CHANGE_ME_NEW_TOTP_SECRET

# Kite Connect API Configuration
KITE_API_KEY=CHANGE_ME_USE_NEW_API_KEY
KITE_API_SECRET=CHANGE_ME_USE_NEW_SECRET
KITE_ACCESS_TOKEN=REGENERATE_DAILY
KITE_USER_ID=YOUR_USER_ID
KITE_PASSWORD=ENCRYPTED_OR_FROM_KEYSTORE
KITE_TOTP_SECRET=CHANGE_ME_NEW_TOTP_SECRET
KITE_REQUEST_TOKEN=REGENERATE_DAILY

# Database Configuration
DB_SERVER=(localdb)\mssqllocaldb
DB_NAME=KiteConnectApi
DB_DRIVER=ODBC Driver 17 for SQL Server
DB_TRUSTED_CONNECTION=true

# Security Keys (Generate new ones!)
JWT_SECRET_KEY=GENERATE_NEW_SECRET_USE_COMMAND_BELOW
APP_SECRET_KEY=GENERATE_NEW_SECRET_USE_COMMAND_BELOW
API_KEY=GENERATE_NEW_API_KEY
API_SECRET=GENERATE_NEW_API_SECRET

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_CONNECTIONS=100

# Trading Safety
PAPER_TRADING_MODE=true
MAX_POSITION_SIZE=1800
MAX_DAILY_LOSS=50000
MAX_CONCURRENT_POSITIONS=3

# To generate secure keys, run:
# python -c "import secrets; print('JWT_SECRET_KEY=' + secrets.token_urlsafe(32))"
# python -c "import secrets; print('APP_SECRET_KEY=' + secrets.token_urlsafe(32))"
# python -c "import secrets; print('API_KEY=' + secrets.token_urlsafe(24))"
# python -c "import secrets; print('API_SECRET=' + secrets.token_urlsafe(32))"